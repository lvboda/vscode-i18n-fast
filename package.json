{
  "name": "vscode-i18n-fast",
  "displayName": "I18n Fast",
  "description": "",
  "version": "0.0.1",
  "publisher": "lvboda",
  "author": {
    "name": "Boda LÃ¼",
    "url": "https://lvboda.cn",
    "email": "lv_boda@163.com"
  },
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/lvboda/vscode-i18n-fast.git"
  },
  "icon": "images/logo.png",
  "homepage": "https://github.com/lvboda/vscode-i18n-fast/blob/master/README.md",
  "bugs": {
    "url": "https://github.com/lvboda/vscode-i18n-fast/issues"
  },
  "keywords": [
    "i18n-fast",
    "i18n"
  ],
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "i18n-fast.convert",
        "title": "%package.commands.convert%"
      },
      {
        "command": "i18n-fast.paste",
        "title": "%package.commands.paste%"
      },
      {
        "command": "i18n-fast.undo",
        "title": "%package.commands.undo%"
      }
    ],
    "keybindings": [
      {
        "command": "i18n-fast.convert",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "i18n-fast.paste",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v",
        "when": "editorTextFocus"
      },
      {
        "command": "i18n-fast.undo",
        "key": "ctrl+alt+z",
        "mac": "cmd+alt+z",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "%package.configuration.title%",
      "properties": {
        "i18n-fast.hookFilePattern": {
          "description": "%package.configuration.hookFilePattern%",
          "type": "string",
          "default": "i18n-fast.hook.js"
        },
        "i18n-fast.i18nFilePattern": {
          "description": "%package.configuration.i18nFilePattern%",
          "type": "string",
          "default": ""
        },
        "i18n-fast.autoMatchChinese": {
          "description": "%package.configuration.autoMatchChinese%",
          "type": "boolean",
          "default": true
        },
        "i18n-fast.conflictPolicy": {
          "description": "%package.configuration.conflictPolicy%",
          "type": "string",
          "default": "smart",
          "enum": [
            "reuse",
            "ignore",
            "picker",
            "smart"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.6",
    "@types/crypto-js": "^4.2.2",
    "@types/lodash": "^4.17.7",
    "@types/node": "16.x",
    "@types/qs": "^6.9.15",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@babel/parser": "^7.26.8",
    "@babel/traverse": "^7.26.8",
    "@formatjs/icu-messageformat-parser": "^2.11.1",
    "@monyone/aho-corasick": "^1.0.4",
    "crypto-js": "^4.2.0",
    "lodash": "^4.17.21",
    "minimatch": "^10.0.1",
    "prettier": "^3.5.3",
    "qs": "^6.13.0",
    "string-width": "^4.2.3",
    "tiny-pinyin": "^1.3.2",
    "uuid": "^11.1.0"
  }
}
